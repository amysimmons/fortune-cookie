<%= form_for @fortune do |f| %>
	<div class="form-group">	
		<div class="form-label"><%= f.label :name %></div>
		<div><%= f.text_field :name %></div>
	</div>

   	<div class="form-group">
	   	<div class="form-label"><%= f.label :city %></div>
	    <div><%= f.text_field :city %></div>
	</div>
	<div class="form-group">
		<div class="form-label"><%= f.label :description, "Your fortune" %></div>
		<div class="form-description"><%= f.text_field :description, :rows => 2, :required => true %></div>
	</div>
	<div class="form-group">
	   <div class="form-label"><%= f.label :twitter_handle %></div>
	   <div><%= f.url_field :twitter_handle %></div>
   	</div>
   	<div class="form-group">
    	<%= f.submit class: 'main-btn' %>
	</div>
<% end %>