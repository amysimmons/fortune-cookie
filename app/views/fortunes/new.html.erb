<div class="new-content">
	<%= form_for @fortune do |f| %>
		<div class="form-group">
			<div class="form-label"><%= f.label :description, "Write a fortune for someone else to open (be kind!)" %></div>
			<div class="form-description"><%= f.text_field :description, :required => true, :placeholder => 'If winter comes, can spring be far behind?' %></div>
		</div>
		<div class="form-group">	
			<div class="form-label"><%= f.label :name, "Name" %></div>
			<div><%= f.text_field :name, :placeholder => 'Your name'  %></div>
		</div>

	   	<div class="form-group">
		   	<div class="form-label"><%= f.label :city, "City" %></div>
		    <div><%= f.text_field :city, :placeholder => 'Your city' %></div>
		</div>
		<div class="form-group">
		   <div class="form-label"><%= f.label :twitter_handle, "Twitter handle" %></div>
		   <div><%= f.text_field :twitter_handle, :placeholder => 'Your Twitter handle' %></div>
	   	</div>
	   	<div class="form-group">
	    	<%= f.submit class: 'main-btn' %>
		</div>
	<% end %>
</div>